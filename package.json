{
  "name": "software-planning-tool",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "software-planning-tool": "./build/index.js",
    "governance-server": "./build/governance-server.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755') && require('fs').chmodSync('build/governance-server.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "governance": "npx @modelcontextprotocol/inspector build/governance-server.js",
    "metrics": "node scripts/generate-code-metrics.js > docs/code_metrics.csv && node scripts/generate-metrics-html.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
